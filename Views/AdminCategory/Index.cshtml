@model List<Porto.Models.Category>

@{
    ViewBag.Title = "Categories - Admin";
}

<h2>Manage Categories</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Category</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.CategoryID })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.CategoryID })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>