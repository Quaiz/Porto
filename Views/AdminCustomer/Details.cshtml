@model Porto.Models.Customer

@{
    ViewBag.Title = "Chi Tiết Khách Hàng - Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-circle"></i> Chi Tiết Khách Hàng</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông Tin Khách Hàng</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3"><i class="fas fa-hashtag"></i> Mã khách hàng:</dt>
                    <dd class="col-sm-9"><strong>#@Model.CustomerID</strong></dd>

                    <dt class="col-sm-3"><i class="fas fa-user"></i> Họ tên:</dt>
                    <dd class="col-sm-9">@Model.CustomerName</dd>

                    <dt class="col-sm-3"><i class="fas fa-envelope"></i> Email:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                        {
                            <a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có</span>
                        }
                    </dd>

                    <dt class="col-sm-3"><i class="fas fa-phone"></i> Điện thoại:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                        {
                            <a href="tel:@Model.CustomerPhone">@Model.CustomerPhone</a>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có</span>
                        }
                    </dd>

                    <dt class="col-sm-3"><i class="fas fa-map-marker-alt"></i> Địa chỉ:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.CustomerAddress))
                        {
                            @Model.CustomerAddress
                        }
                        else
                        {
                            <span class="text-muted">Chưa có</span>
                        }
                    </dd>

                    <dt class="col-sm-3"><i class="fas fa-user-tag"></i> Username:</dt>
                    <dd class="col-sm-9">
                        <span class="badge badge-secondary">@Model.Username</span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-shopping-bag"></i> Đơn Hàng Gần Đây</h5>
            </div>
            <div class="card-body">
                @if (Model.Order != null && Model.Order.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Mã ĐH</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Order.OrderByDescending(o => o.OrderDate).Take(5))
                                {
                                    <tr>
                                        <td><strong>#@order.OrderID</strong></td>
                                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                        <td>
                                            @if (order.PaymentStatus.Contains("Chưa"))
                                            {
                                                <span class="badge badge-warning">@order.PaymentStatus</span>
                                            }
                                            else if (order.PaymentStatus.Contains("Đã"))
                                            {
                                                <span class="badge badge-success">@order.PaymentStatus</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-info">@order.PaymentStatus</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "AdminOrder", new { id = order.OrderID })" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a href="@Url.Action("Orders", new { id = Model.CustomerID })" class="btn btn-primary btn-block">
                        <i class="fas fa-list"></i> Xem Tất Cả Đơn Hàng
                    </a>
                }
                else
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle"></i> Khách hàng chưa có đơn hàng nào
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Thống Kê Mua Hàng</h5>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <h2 class="text-primary">@ViewBag.TotalOrders</h2>
                    <p class="text-muted">Tổng đơn hàng</p>
                </div>
                <div class="mb-4">
                    <h2 class="text-success">@ViewBag.TotalSpent.ToString("C")</h2>
                    <p class="text-muted">Tổng chi tiêu</p>
                </div>
                <div>
                    <h2 class="text-warning">@ViewBag.PendingOrders</h2>
                    <p class="text-muted">Đơn chờ xử lý</p>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-cog"></i> Thao Tác</h5>
            </div>
            <div class="card-body">
                <a href="@Url.Action("Orders", new { id = Model.CustomerID })" class="btn btn-primary btn-block mb-2">
                    <i class="fas fa-shopping-bag"></i> Xem Đơn Hàng
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">
                    <i class="fas fa-arrow-left"></i> Quay Lại Danh Sách
                </a>
            </div>
        </div>
    </div>
</div>

