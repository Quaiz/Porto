@model List<Porto.Models.Order>

@{
    ViewBag.Title = $"Đơn Hàng - {ViewBag.CustomerName} - Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shopping-bag"></i> Đơn Hàng Của @ViewBag.CustomerName</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Ngày đặt</th>
                        <th>Địa chỉ giao hàng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th class="text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>#@item.OrderID</strong></td>
                            <td>
                                <i class="fas fa-calendar"></i> @item.OrderDate.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.AddressDelivery))
                                {
                                    <small>@item.AddressDelivery</small>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>
                            <td>
                                <strong class="text-success">@item.TotalAmount.ToString("C")</strong>
                            </td>
                            <td>
                                @if (item.PaymentStatus.Contains("Chưa"))
                                {
                                    <span class="badge badge-warning"><i class="fas fa-clock"></i> @item.PaymentStatus</span>
                                }
                                else if (item.PaymentStatus.Contains("Đã"))
                                {
                                    <span class="badge badge-success"><i class="fas fa-check-circle"></i> @item.PaymentStatus</span>
                                }
                                else if (item.PaymentStatus.Contains("Chờ"))
                                {
                                    <span class="badge badge-info"><i class="fas fa-hourglass-half"></i> @item.PaymentStatus</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">@item.PaymentStatus</span>
                                }
                            </td>
                            <td class="text-right">
                                <a href="@Url.Action("Details", "AdminOrder", new { id = item.OrderID })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-info">
                        <td colspan="3" class="text-right"><strong>Tổng cộng:</strong></td>
                        <td colspan="3">
                            <strong class="text-success" style="font-size: 1.2rem;">
                                @Model.Sum(o => o.TotalAmount).ToString("C")
                            </strong>
                            <span class="text-muted ml-2">(@Model.Count đơn hàng)</span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> Khách hàng chưa có đơn hàng nào
            </div>
        }
    </div>
</div>

