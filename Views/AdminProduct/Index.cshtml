@model List<Porto.Models.Product>

@{
    ViewBag.Title = "Products - Admin";
}

<h2>Manage Products</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ProductImage))
                    {
                        <img src="~/Content/images/@item.ProductImage" width="50" height="50">
                    }
                </td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice.ToString("C")</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>