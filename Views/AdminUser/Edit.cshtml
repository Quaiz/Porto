@model Porto.Models.User

@{
    ViewBag.Title = "Chỉnh Sửa Người Dùng - Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-edit"></i> Chỉnh Sửa Người Dùng</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Edit", "AdminUser", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Username)

                    <div class="form-group">
                        @Html.Label("Username", "Tên đăng nhập", new { @class = "font-weight-bold" })
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" value="@Model.Username" readonly disabled>
                        </div>
                        <small class="form-text text-muted">Không thể thay đổi tên đăng nhập</small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, "Mật khẩu mới", new { @class = "font-weight-bold" })
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu mới...", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <small class="form-text text-muted">
                            <i class="fas fa-exclamation-triangle"></i> Mật khẩu sẽ được cập nhật
                        </small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserRole, "Vai trò", new { @class = "font-weight-bold" })
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            </div>
                            @Html.DropDownListFor(m => m.UserRole, (SelectList)ViewBag.UserRoles, new { @class = "form-control", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.UserRole, "", new { @class = "text-danger" })
                    </div>

                    @if (Model.Username == User.Identity.Name)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> 
                            <strong>Chú ý:</strong> Bạn đang chỉnh sửa tài khoản của chính mình!
                        </div>
                    }

                    <div class="text-right">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Cập Nhật
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

