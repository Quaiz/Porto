@model List<Porto.Models.User>

@{
    ViewBag.Title = "Quản Lý Người Dùng - Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users-cog"></i> Quản Lý Người Dùng</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Thêm Người Dùng
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th class="text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Username == User.Identity.Name ? "table-info" : "")">
                            <td>
                                <strong>@item.Username</strong>
                                @if (item.Username == User.Identity.Name)
                                {
                                    <span class="badge badge-info ml-2"><i class="fas fa-user"></i> Bạn</span>
                                }
                            </td>
                            <td>
                                @if (item.UserRole == "Admin")
                                {
                                    <span class="badge badge-danger"><i class="fas fa-user-shield"></i> Admin</span>
                                }
                                else
                                {
                                    <span class="badge badge-primary"><i class="fas fa-user"></i> Customer</span>
                                }
                            </td>
                            <td>
                                <span class="badge badge-success"><i class="fas fa-check-circle"></i> Hoạt động</span>
                            </td>
                            <td class="text-right">
                                <a href="@Url.Action("Edit", new { id = item.Username })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                @if (item.Username != User.Identity.Name)
                                {
                                    <a href="@Url.Action("Delete", new { id = item.Username })" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> Chưa có người dùng nào
            </div>
        }
    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thống Kê</h5>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-3">
                <h3 class="text-primary">@Model.Count</h3>
                <p class="text-muted">Tổng người dùng</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-danger">@Model.Count(u => u.UserRole == "Admin")</h3>
                <p class="text-muted">Admin</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-success">@Model.Count(u => u.UserRole == "Customer")</h3>
                <p class="text-muted">Customer</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-info">@Model.Count(u => u.Username == User.Identity.Name)</h3>
                <p class="text-muted">Đang đăng nhập</p>
            </div>
        </div>
    </div>
</div>

