@model List<Porto.Models.Product>

@{
    ViewBag.Title = "Home - Porto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="carousel slide" data-ride="carousel" id="featuredCarousel">
                <ol class="carousel-indicators">
                    <li data-target="#featuredCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#featuredCarousel" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/images/feature1.jpg" class="d-block w-100" alt="Featured 1" style="height:450px; object-fit:cover; border-radius: 15px;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/feature2.jpg" class="d-block w-100" alt="Featured 2" style="height:450px; object-fit:cover; border-radius: 15px;">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#featuredCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#featuredCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="text-center mt-5 mb-4">
        <h2 class="display-4 font-weight-bold">
            <i class="fas fa-star text-warning"></i> Sản Phẩm Nổi Bật
        </h2>
        <p class="text-muted">Những sản phẩm công nghệ mới nhất và hot nhất hiện nay</p>
    </div>
    
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4 zoom-in">
                <div class="card h-100 product-card">
                    <div class="product-image-wrapper">
                        <img src="~/Content/images/@product.ProductImage" class="card-img-top" alt="@product.ProductName" style="height:220px; object-fit:cover;">
                        <div class="product-overlay">
                            <i class="fas fa-eye fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title font-weight-bold">@product.ProductName</h5>
                        <p class="card-text text-danger font-weight-bold" style="font-size: 1.3rem;">
                            <i class="fas fa-tag"></i> @product.ProductPrice.ToString("C")
                        </p>
                        <div class="mt-auto d-flex gap-2">
                            <a href="@Url.Action("Details", "Product", new { id = product.ProductID })" class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                            <button class="btn btn-primary btn-sm add-to-cart flex-fill" data-id="@product.ProductID">
                                <i class="fas fa-cart-plus"></i> Thêm
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    <script src="~/Scripts/cart.js"></script>
}