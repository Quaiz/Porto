@model Porto.Models.Order

@{
    ViewBag.Title = "Order Details - Porto";
}

<div class="container mt-4">
    <h2>Order #@Model.OrderID</h2>

    <div class="row">
        <div class="col-md-6">
            <h5>Customer Information</h5>
            <p><strong>Name:</strong> @Model.Customer.CustomerName</p>
            <p><strong>Address:</strong> @Model.Customer.CustomerAddress</p>
            <p><strong>Phone:</strong> @Model.Customer.CustomerPhone</p>
        </div>
        <div class="col-md-6">
            <h5>Order Information</h5>
            <p><strong>Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>
        </div>
    </div>

    <h5 class="mt-4">Order Items</h5>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetail)
            {
                <tr>
                    <td>@detail.Product.ProductName</td>
                    <td>@detail.UnitPrice.ToString("C")</td>
                    <td>@detail.Quantity</td>
                    <td>@(detail.UnitPrice * detail.Quantity).ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><strong>Grand Total:</strong></td>
                <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
            </tr>
        </tfoot>
    </table>

    <a href="@Url.Action("History")" class="btn btn-secondary">Back to Orders</a>
</div>