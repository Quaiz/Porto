@model Porto.Models.Product

@{
    ViewBag.Title = Model.ProductName + " - Porto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="~/Content/images/@Model.ProductImage" class="img-fluid" alt="@Model.ProductName">
        </div>
        <div class="col-md-7">
            <h2>@Model.ProductName</h2>
            <p class="text-muted mb-3">
                <i class="fas fa-tag"></i> Category: <strong>@Model.Category.CategoryName</strong>
            </p>
            <h3 class="text-danger mb-3">
                <i class="fas fa-dollar-sign"></i> @Model.ProductPrice.ToString("C")
            </h3>
            
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-info-circle"></i> Mô tả sản phẩm</h5>
                    <p class="card-text" style="white-space: pre-line;">@Model.ProductDecription</p>
                </div>
            </div>

            <div class="mt-4">
                <button class="btn btn-primary btn-lg add-to-cart" data-id="@Model.ProductID">
                    <i class="fas fa-shopping-cart"></i> Add to Cart
                </button>
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to Products
                </a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/cart.js"></script>
}