<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 4 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Font Awesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/css/site.css" rel="stylesheet" />
</head>
<body style="min-height: 100%; display: flex; flex-direction: column;">
    <!-- Header -->
    <header class="fade-in">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-shopping-bag"></i> Porto
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Product")">
                                <i class="fas fa-th-large"></i> Products
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated && Session["UserRole"]?.ToString() == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                                    <i class="fas fa-cog"></i> Admin
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Index", "AdminCategory")">
                                        <i class="fas fa-layer-group"></i> Categories
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "AdminProduct")">
                                        <i class="fas fa-box-open"></i> Products
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "AdminOrder")">
                                        <i class="fas fa-shopping-basket"></i> Orders
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>

                    <form class="form-inline mx-2" method="get" action="@Url.Action("Index", "Product")" style="max-width: 300px;">
                        <div class="input-group input-group-sm">
                            <input type="text" name="search" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.Search" style="border-radius: 20px 0 0 20px; font-size: 0.9rem; padding: 0.5rem 0.75rem;">
                            <div class="input-group-append">
                                <button class="btn btn-outline-light btn-sm" type="submit" style="border-radius: 0 20px 20px 0;">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <ul class="navbar-nav">
                        <!-- Dark Mode Toggle -->
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)" onclick="toggleDarkMode()" id="darkModeToggle">
                                <i class="fas fa-moon"></i>
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    @if (Session["UserRole"]?.ToString() == "Customer")
                                    {
                                        <a class="dropdown-item" href="@Url.Action("History", "Order")">
                                            <i class="fas fa-history"></i> My Orders
                                        </a>
                                    }
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Account")">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link position-relative" href="@Url.Action("Index", "Cart")">
                                <i class="fas fa-shopping-cart fa-lg"></i>
                                <span class="badge badge-danger position-absolute" id="cart-count" style="top: 5px; right: -5px; border-radius: 50%; padding: 4px 7px; font-size: 0.7rem;">@Porto.Models.CartSession.GetCount()</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container-fluid mt-4" style="flex: 1;">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white mt-5 py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5><i class="fas fa-shopping-bag"></i> Porto Store</h5>
                    <p class="mt-3">Cửa hàng công nghệ uy tín hàng đầu Việt Nam. Chuyên cung cấp điện thoại, laptop, phụ kiện chính hãng với giá tốt nhất.</p>
                    <div class="mt-3">
                        <a href="#" class="text-white mr-3" style="font-size: 1.5rem;"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-white mr-3" style="font-size: 1.5rem;"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white mr-3" style="font-size: 1.5rem;"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="text-white" style="font-size: 1.5rem;"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h5><i class="fas fa-link"></i> Quick Links</h5>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-white"><i class="fas fa-chevron-right"></i> Trang chủ</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product")" class="text-white"><i class="fas fa-chevron-right"></i> Sản phẩm</a></li>
                        <li class="mb-2"><a href="#" class="text-white"><i class="fas fa-chevron-right"></i> Về chúng tôi</a></li>
                        <li class="mb-2"><a href="#" class="text-white"><i class="fas fa-chevron-right"></i> Liên hệ</a></li>
                        <li class="mb-2"><a href="#" class="text-white"><i class="fas fa-chevron-right"></i> Chính sách</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4">
                    <h5><i class="fas fa-headset"></i> Hỗ trợ</h5>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2"><a href="#" class="text-white"><i class="fas fa-chevron-right"></i> Hướng dẫn</a></li>
                        <li class="mb-2"><a href="#" class="text-white"><i class="fas fa-chevron-right"></i> Bảo hành</a></li>
                        <li class="mb-2"><a href="#" class="text-white"><i class="fas fa-chevron-right"></i> Vận chuyển</a></li>
                        <li class="mb-2"><a href="#" class="text-white"><i class="fas fa-chevron-right"></i> Thanh toán</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5><i class="fas fa-map-marker-alt"></i> Liên hệ</h5>
                    <div class="mt-3">
                        <p><i class="fas fa-home"></i> 123 Commerce St, Q1, TP.HCM</p>
                        <p><i class="fas fa-phone"></i> +84 123 456 789</p>
                        <p><i class="fas fa-envelope"></i> info@porto.com</p>
                        <p><i class="fas fa-clock"></i> 8:00 - 22:00 Hàng ngày</p>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="mb-0">&copy; @DateTime.Now.Year Porto E-Commerce. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Dark Mode Script -->
    <script>
        // Check for saved dark mode preference
        if (localStorage.getItem('darkMode') === 'enabled') {
            document.body.classList.add('dark-mode');
            document.getElementById('darkModeToggle').innerHTML = '<i class="fas fa-sun"></i>';
        }

        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
            const darkModeToggle = document.getElementById('darkModeToggle');
            
            if (document.body.classList.contains('dark-mode')) {
                localStorage.setItem('darkMode', 'enabled');
                darkModeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            } else {
                localStorage.setItem('darkMode', 'disabled');
                darkModeToggle.innerHTML = '<i class="fas fa-moon"></i>';
            }
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>